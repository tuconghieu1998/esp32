        }

        .sidebar button {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            background-color: #34495e;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        #language {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 10px;
            margin: 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
        }

        #language label {
            color: white;
            font-size: 12px;
        }

        #language-select {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            background-color: #34495e;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        #language-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.2);
            outline: none;
        }

        .sidebar button:hover {
            background-color: #3d566e;
        }

        .sidebar button.active {
            background-color: #4E71FF;
            font-weight: bold;
        }

        /* Main content */
        .main {
            margin-left: 240px;
            padding: 20px;
            flex-grow: 1;
        }

        .slide-group {
            display: none;
        }

        .slide-group.active {
            display: block;
        }

        .slide-group h3 {
            text-align: center;
            margin-top: 100px;
        }

        .slide-group p {
            text-align: center;
        }

        .image-container {
            position: relative;
            width: 100%;
            max-width: 1300px;
            margin: 20px auto;
        }

        .image-container img {
            width: 100%;
            border: 4px solid #333;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            display: block;
        }

        .caption {
            position: absolute;
            bottom: 0px;
            right: 0px;
            background-color: rgba(0, 0, 0, 0.3);
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 14px;
        }

        h1 {
            text-align: center;
        }

        .thumbnail-panel {
            position: fixed;
            top: 0px;
            right: 10px;
            width: 120px;
            max-height: 100vh;
            overflow-y: auto;
            background-color: #f4f4f4;
            border: 1px solid #ccc;
            padding: 5px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        .thumbnail-panel img {
            width: 95%;
            margin-bottom: 5px;
            border: 2px solid transparent;
            border-radius: 4px;
            cursor: pointer;
            transition: border 0.3s;
        }

        .thumbnail-panel img:hover {
            border: 2px solid #3498db;
        }

        .right-thumb.active-thumb {
            border: 3px solid #3498db;
        }

        .thumbnail-label {
            font-size: 12px;
            text-align: center;
            padding-bottom: 5px;
        }

        #right-thumbnails {
            cursor: pointer;
            overflow-y: auto;
            scrollbar-width: none;
            /* Firefox */
            -ms-overflow-style: none;
            /* Internet Explorer 10+ */
        }

        #right-thumbnails.hidden {
            max-width: 0;
            pointer-events: none;
            transition: max-width 0.3s ease;
        }

        #right-thumbnails::-webkit-scrollbar {
            display: none;
            /* Chrome, Safari, Opera */
        }

        /* Hide thumbnails on small screens */
        @media (max-width: 1900px) {
            #right-thumbnails {
                display: none;
            }
