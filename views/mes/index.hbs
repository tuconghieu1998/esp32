    <script>
        let observer = null; // global so we can disconnect before reuse
        let currentGroup = "group1";

        const sidebarButtons = document.querySelectorAll('.sidebar-button');

        sidebarButtons.forEach(button => {
            button.addEventListener('click', () => {
                sidebarButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
            });
        });

        function showGroup(groupId, title) {
            currentGroup = groupId;
            const savedLang = localStorage.getItem('lang') || 'en';
            document.getElementById("title").innerText = translations[savedLang][groupId];
            // Hide all groups
            const groups = document.querySelectorAll('.slide-group');
            groups.forEach(group => group.classList.remove('active'));

            // Show selected group
            let activeGroup = document.getElementById(groupId);
            activeGroup.classList.add('active');

            // Scroll to top of the main content smoothly
            document.getElementById("main-content").scrollIntoView();

            // Build right thumbnails
            const thumbnailPanel = document.getElementById("right-thumbnails");
            thumbnailPanel.innerHTML = ``;
            let isThumbnailClick = false;

            const images = activeGroup.querySelectorAll("img");
            images.forEach((img) => {
                // Create container
                const container = document.createElement("div");
                container.classList.add("thumbnail-container");

                let index = img.getAttribute('data-index');

                const thumb = document.createElement("img");
                thumb.src = img.src;
                thumb.alt = "Thumbnail " + (index + 1);
                thumb.classList.add("right-thumb");
                thumb.setAttribute('data-index', index);
                thumb.onclick = () => {
                    isThumbnailClick = true;
                    img.scrollIntoView({ behavior: "smooth", block: "center" });
                    setTimeout(() => { isThumbnailClick = false; }, 2000); // Reset after scroll
                }

                // Create label for image name
                const label = document.createElement("div");
                label.classList.add("thumbnail-label");
                label.textContent = img.src.split("/").pop().replace(/\.[^/.]+$/, "");

                // Append thumbnail and label to container
                container.appendChild(thumb);
                container.appendChild(label);

                // Append container to panel
                thumbnailPanel.appendChild(container);
            });

            // Clear old observer
            if (observer) observer.disconnect();

            // Create new observer to track which slide is in view
            observer = new IntersectionObserver(entries => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const index = entry.target.getAttribute('data-index');
                        document.querySelectorAll(".right-thumb").forEach(thumb => {
                            thumb.classList.remove("active-thumb");
                        });
                        const activeThumb = document.querySelector(`.right-thumb[data-index="${index}"]`);
                        if (activeThumb) {
                            activeThumb.classList.add("active-thumb");
                            if (isThumbnailClick) return; // Prevent auto-scroll on user click
                            activeThumb.scrollIntoView({ behavior: "smooth", block: "center", inline: "nearest" });
                        }
                    }
                });
            }, {
                root: null,
                rootMargin: '0px',
                threshold: 0.5
            });

            images.forEach(img => observer.observe(img));
        }

        // Wrap all images in .image-container and add filename caption
        document.querySelectorAll('.slide-group img').forEach((img, index) => {
            // Create wrapper div
            const wrapper = document.createElement('div');
            wrapper.className = 'image-container';

            const imgId = `slide-${index}`;
            img.setAttribute('id', imgId);
            img.setAttribute('data-index', index);

            // Insert wrapper before the image
            img.parentNode.insertBefore(wrapper, img);
            // Move image inside wrapper
            wrapper.appendChild(img);

            // Create caption from filename
            const filename = img.src.split("/").pop().replace(/\.[^/.]+$/, "");
            const caption = document.createElement('div');
            caption.className = 'caption';
            caption.innerText = filename;

            // Add caption to wrapper
            wrapper.appendChild(caption);
        });

        showGroup('group1', 'QUY TRÌNH SẢN XUẤT HÀNG XƯỞNG 1');

    </script>
    <script>
        function localize(lang = 'en') {
            document.querySelectorAll('[data-i18n]').forEach(elem => {
                const key = elem.getAttribute('data-i18n');
                elem.textContent = translations[lang][key] || key;
            });
        }
        document.getElementById('language-select').addEventListener('change', e => {
            const lang = e.target.value;
            localStorage.setItem('lang', lang);
            localize(lang);
            document.getElementById("title").innerText = translations[lang][currentGroup];
        });

        // Load saved language on page load
        const savedLang = localStorage.getItem('lang') || 'en';
        document.getElementById('language-select').value = savedLang;
        localize(savedLang);
    </script>
